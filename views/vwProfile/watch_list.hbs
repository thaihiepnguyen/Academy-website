{{#section 'profile'}}
    <link rel="stylesheet" href="/css/home_profile.css">
{{/section}}

{{#section 'handleProfile'}}
    <script src="/js/main.js"></script>
{{/section}}


<nav style="border: 1px solid #ccc;border-radius: 5px;" class=" navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">

        <button type="button" id="sidebarCollapse" class="btn btn-primary"
                style="background-color: #000; border-color: #000; opacity: 80%">
            <i class="fa fa-bars"></i>
            <span class="sr-only">Toggle Menu</span>
        </button>
        <div class="content_profile" style="text-align: center;">
            <h1>Watch list</h1>
<!--            video course -->
            <p class="description">The course you already love</p>
        </div>
    </div>
</nav>

<div class="content">
    <div class="d-flex is-flex-wrap-wrap">
        {{#if message_no_watch_list}}
            <div class="mt-3">
                {{message_no_watch_list}}

            </div>
        {{/if}}
        {{#if this.courses}}
            {{#each this.courses}}
                <form action="/account/watch_list/delete/{{id}}" method="post">
                    <div  class="card mr-6 mt-6 d-flex flex-column d-flex justify-content-between" style="width: 18rem;margin-right: 20px !important;">
                        <a href="/courses/detail/{{id}}" class="courses" style="color: #000">
                            <img src="/imgs/courses/{{category_id}}/{{topic_id}}/{{id}}.jpeg" class="card-img-top" alt="...">
                            <div class="d-flex card-body align-items-start flex-column">
                                <h5 class="card-title font-weight-bold">{{name}}</h5>

                                <div style="width: 100%;" class="mt-auto">
                                    <p class="card-text ">{{catName}}</p>
                                    <p class="card-text font-weight-light">{{firstname}} {{lastname}}</p>
                                    <div class="d-flex justify-content-between align-items-center w-100">
                                        <div style="display: flex">
                                            <div class="ratings">
                                                {{#each ratings}}
                                                    <small class="fa fa-star {{this}}"></small>
                                                {{/each}}
                                            </div>
                                            <small class="review-count">({{this.views}})</small>
                                        </div>
                                        <div>
                                            <button style="color: red; font-size:1.2rem; border: none; background-color: #ffffff" class="fa fa-heart" type="submit"  value="{{id}}"></button>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center w-100">
                                        <p class="font-weight-bold">{{format_number this.price}} VND</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </form>

            {{/each}}
        {{else}}
            <p class="h4 mt-50">{{this.warning}}</p>
        {{/if}}
    </div>
</div>
