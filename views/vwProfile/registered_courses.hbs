{{#section 'profile'}}
    <link rel="stylesheet" href="/css/home_profile.css">
{{/section}}

{{#section 'handleProfile'}}
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/popper.js"></script>
    <script src="/js/jquery.min.js"></script>
{{/section}}


<nav style="border: 1px solid #ccc;border-radius: 5px;" class=" navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">

        <button type="button" id="sidebarCollapse" class="btn btn-primary">
            <i class="fa fa-bars"></i>
            <span class="sr-only">Toggle Menu</span>
        </button>
        <div class="content_profile">
            <h1>Resgistere courses</h1>
            <!--            video course -->
            <p class="description">The course you registered</p>
        </div>

    </div>
</nav>

<div class="content">
    <div class="d-flex is-flex-wrap-wrap">
        {{#if this.courses}}
            {{#each this.courses}}
                <div class="card mr-6 mt-6 d-flex flex-column" style="width: 18rem;">
                    <img src="/imgs/courses/1/{{id}}.jpeg" class="card-img-top" alt="...">
                    <div class="d-flex card-body align-items-start flex-column">
                        <h5 class="card-title font-weight-bold">{{name}}</h5>
                        <p class="card-text ">{{tiny_des}}</p>

                        <div class="mt-auto">
                            <p class="card-text font-weight-light">{{firstname}} {{lastname}}</p>

                            <div class="d-flex justify-content-between align-items-center w-100">
                                <div class="ratings">
                                    {{#each ratings}}
                                        <small class="fa fa-star {{this}}"></small>
                                    {{/each}}
                                </div>
                                <small class="review-count">(0)</small>
                            </div>
                        </div>
                        <p class="font-weight-bold">{{format_number this.price}} VND</p>
                    </div>
                </div>
            {{/each}}
        {{else}}
            <p class="h4 mt-50">{{this.warning}}</p>
        {{/if}}
    </div>
    <button type="button" class="btn btn-dark mt-3">SAVE</button>
</div>