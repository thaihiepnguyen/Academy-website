<div class="bg-img">
    <div class="content">
        <header>Sign Up</header>
        <form method="post">
            <div class="field space">
                <span class="fa fa-user"></span>

                <input name="firstname" type="text" required placeholder="First name" autofocus>
            </div>
            <div class="field space">
                <span class="fa fa-user"></span>

                <input name="lastname" type="text" required placeholder="Last name">
            </div>
            <div class="field space ">
                <span class="fa fa-envelope"></span>
                <input name="email" type="text" required placeholder="Email">
            </div>
            <div class="field space">
                <span class="fa fa-lock"></span>
                <input name="password" type="password" class="pass-key" required placeholder="Password">
                <span class="show">SHOW</span>
            </div>

            {{#if message}}
                <div class=" field space alert alert-danger" role="alert">{{message}}
                </div>
            {{/if}}

            <div class="field space">
                <input type="submit" value="SIGNUP">
            </div>
        </form>

        <div class="signup space">Already have an account?
            <a href="/account/login">Log in</a>
        </div>
    </div>
</div>