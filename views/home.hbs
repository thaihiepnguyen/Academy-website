{{#section 'home-js'}}
    <script src="/public/js/ajax-heart.js"></script>
    <script src="/public/js/ajax-enroll.js"></script>
{{/section}}

<div
        id="carouselExampleIndicators"
        class="carousel slide"
		data-ride="carousel"
		style="margin-left: 60px; margin-right: 60px; margin-top: 100px"
>
    <!-- slider-->
    <ol class="carousel-indicators">
        <li
                data-target="#carouselExampleIndicators"
                data-slide-to="0"
                class="active"
        ></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img
                    src="https://img-c.udemycdn.com/notices/web_banner/slide_2_image_udlite/e6cc1a30-2dec-4dc5-b0f2-c5b656909d5b.jpg"
                    class="d-block w-100"
                    alt="..."
            />
        </div>
        <div class="carousel-item">
            <img
                    src="https://img-c.udemycdn.com/notices/web_banner/slide_1_image_udlite/f248983f-b07d-4646-9316-da1fb154f8bb.jpg"
                    class="d-block w-100"
                    alt="..."
            />
        </div>
        <div class="carousel-item">
            <img
                    src="https://img-c.udemycdn.com/notices/web_banner/slide_1_image_udlite/785695e9-5e74-486e-98d5-27354a474246.jpg"
                    class="d-block w-100"
                    alt="..."
            />
        </div>
    </div>
    <button
            class="carousel-control-prev"
            type="button"
            data-target="#carouselExampleIndicators"
            data-slide="prev"
    >
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </button>
    <button
            class="carousel-control-next"
            type="button"
            data-target="#carouselExampleIndicators"
            data-slide="next"
    >
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </button>
</div>



    {{#if this.isExistCourses}}
        {{#each this.courses}}
            <p class="h3 mb-3 mt-30" style="padding-right: 60px; padding-left: 60px">{{this.title}}</p>
            <div style="width: 100%; padding-right: 60px; padding-left: 60px" class="d-flex is-flex-wrap-wrap">
            {{#each this.entity}}

            <div class="card d-flex mt-30 shadow mr-20 ml-20" style="width: 18rem;">
				<a href="/courses/detail?id={{this.id}}&v={{this.video}}">
                	<img src="public/imgs/sp/{{id}}.jpeg" class="card-img-top" alt="...">
				</a>
                <div class="card-body d-flex flex-column justify-between padding-bottom-none">
                    <div>
						<a href="/courses/detail/{{this.id}}" class="fix-a-tag">
                        	<h6 class="card-title">{{this.name}}</h6>
						</a>
                    </div>
                    <div>
                        <p class="card-text mb-0 small" style="color: #6a6f73">{{this.category_name}}</p>
                        <div class="w-100">
                             <span class="ratings">
                                 {{#each ratings}}
                                     <small class="fa fa-star {{this}}"></small>
                                 {{/each}}
                             </span>
                            <small class="review-count">({{format_number 10000}})</small>
                        </div>
                        <div class="d-flex justify-content-between align-items-center w-100">
                            <p class="font-weight-bold">{{format_number this.price}} Ä‘</p>
                        </div>
                        <div class="card-text mb-1rem d-flex justify-between">
							<div class="d-flex">
								<img src="public/imgs/avt/0.png" alt=""
                                 width="30" height="30">
                            	<p class="mb-0 mt-6 ml-10">{{this.lecture_name}}</p>

							</div>

                            {{#if isWatchList}}
                            <form method="" class="formHeart" id="h{{id}}">
                                <button class="fa fa-heart mt-6 heart-style active" type="submit"  value="{{id}}">
                                </button>
                            </form>
                            {{else}}
                            <form method="" class="formHeart" id="h{{id}}">
                                <button class="fa fa-heart mt-6 heart-style" type="submit"  value="{{id}}">
                                </button>
                            </form>
                            {{/if}}
                        </div>
                    </div>
                </div>

            {{#if isEnrolled}}
                <form method="" class="formEnroll" id="e{{id}}">
                    <button class="btn btn-primary enroll enrolled" type="submit" value="{{id}}">Enrolled</button>
                </form>
            {{else}}
                <form method="" class="formEnroll" id="e{{id}}">
                    <button class="btn btn-primary enroll" type="submit"  value="{{id}}">Enroll Now</button>
                </form>
            {{/if}}
            </div>
            {{/each}}
            </div>
        {{/each}}
    {{else}}
        <p class="h4 mt-50">{{this.warning}}</p>
    {{/if}}







