  <body>

<nav class="navbar shadow p-3 mb-5 bg-white rounded header-nav" role="navigation" style="max-height: 80px;"
     aria-label="main navigation">
    <div class="navbar-brand">
        <a class="navbar-item" href="/">
          <img
            src="https://bulma.io/images/bulma-logo.png"
            width="112"
            height="28"
          />
        </a>

        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

    <div id="navbarBasicExample" class="navbar-menu" style="width: 80%">
        <div class="navbar-start">

          <a class="navbar-item text-decoration-none" href="/">
            Home
          </a>

          <div
            class="navbar-item has-dropdown is-hoverable text-decoration-none"
          >
            <a class="navbar-link text-decoration-none">
              Categories
            </a>

                <div class="navbar-dropdown text-decoration-none">
                    <li style="display:block" class="nav-item dropdown is-hoverable">
                        {{#each this.categories}}
                            <a id="cat {{id}}" href="/courses/byCat/{{id}}"
                               class="dropdown-item  dropdown-toggle mr-1">
                                {{name}}
                            </a>
                            <ul id="topic {{id}}"
                                style="top:-19.5%; right:auto; left:100%; position:absolute; min-height: 100px;min-width: 200px; border:none; border-top: 2px solid #ddd; border-radius: 0px"
                                class="dropdown-menu dropdown-submenu navbar-dropdown my-drop" >
                                <li>
                                    {{#each topic}}
                                        <a class="nav-link dropdown-item" href="#">
                                            {{name}}
                                        </a>
                                    {{/each}}
                                </li>
                            </ul>
                        {{/each}}
                    </li>

            </div>
          </div>

            <div class="level-item" style="margin-left: 30px">
                <form action="/courses/search/" method="get">
                    <div class="field has-addons" style="border: none ">
                        <p class="control" style="height: 45px !important;">
                            <input class="input"
                                   style="border: 1px solid #dbdbdb;max-height: 40px;
                                   font-family: inherit; border-bottom-left-radius: 20px; border-top-left-radius: 20px;
                                            "
                                   type="text" placeholder="Search" id="txtKey" name="key" value="">
                        </p>
                        <p class="control" style="height: 45px !important;">
                            <button class="button"
                                    style="border-bottom-right-radius: 20px; border-top-right-radius: 20px" type="submit">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>

                </p>
              </div>
            </form>
          </div>

        </div>

        <div class="navbar-end">
            <div class="d-flex align-items-center justify-content-between item-style" style="width: 423px;">

            <a class="navbar-item text-decoration-none">
              Academy business
            </a>

            <a class="navbar-item text-decoration-none">
              Teach on Academy
            </a>

            <a class="navbar-item text-decoration-none">
              My learning
            </a>
          </div>
          <div class="navbar-item">
            {{#if user}}
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle d-flex align-items-center"
                  href="#"
                  role="button"
                  data-toggle="dropdown"
                  aria-expanded="false"
                >
                  <p style="margin-right: 20px; font-weight: bold; color: #000">
                    {{user.firstname}}</p>
                  <img
                    src={{user.image}}
                    alt="avatar"
                    style="border-radius: 50%;
                                height: 30px; width: 30px;
                              min-height: 30px; min-width:30px ">
                        </a>
                        <div class="dropdown-menu" style="left: -60px; top:125%">
                            <a class="dropdown-item" href="/account/home_profile">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                Edit Profile
                            </a>

                  <a class="dropdown-item" href="/account/home_profile">
                    <i class="fa fa-clock-o" aria-hidden="true"></i>
                    Watch List
                  </a>
                  <div class="dropdown-divider"></div>
                  <form
                    id="frmLogout"
                    action="/account/logout"
                    method="post"
                  ></form>
                  <a
                    class="dropdown-item"
                    href="javascript: $('#frmLogout').submit();"
                  >
                    <i class="fa fa-sign-out" aria-hidden="true"></i>
                    Logout
                  </a>
                </div>
              </li>
            {{else}}
              <div class="buttons">
                <a
                  class="button is-primary"
                  style="background-color: #05445E"
                  href="/account/signup"
                >
                  <strong>Sign up</strong>
                </a>
                <a class="button is-light" href="/account/login">
                  Log in
                </a>
              </div>
            {{/if}}
          </div>
        </div>
      </div>
    </nav>

    {{#if this.activeSliderLayout}}
      <div
        id="carouselExampleIndicators"
        class="carousel slide"
        data-ride="carousel"
        style="margin-left: 60px; margin-right: 60px"
      >
        <ol class="carousel-indicators">
          <li
            data-target="#carouselExampleIndicators"
            data-slide-to="0"
            class="active"
          ></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              src="https://img-c.udemycdn.com/notices/web_banner/slide_2_image_udlite/e6cc1a30-2dec-4dc5-b0f2-c5b656909d5b.jpg"
              class="d-block w-100"
              alt="..."
            />
          </div>
          <div class="carousel-item">
            <img
              src="https://img-c.udemycdn.com/notices/web_banner/slide_2_image_udlite/e6cc1a30-2dec-4dc5-b0f2-c5b656909d5b.jpg"
              class="d-block w-100"
              alt="..."
            />
          </div>
          <div class="carousel-item">
            <img
              src="https://img-c.udemycdn.com/notices/web_banner/slide_1_image_udlite/785695e9-5e74-486e-98d5-27354a474246.jpg"
              class="d-block w-100"
              alt="..."
            />
          </div>
        </div>
        <button
          class="carousel-control-prev"
          type="button"
          data-target="#carouselExampleIndicators"
          data-slide="prev"
        >
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </button>
        <button
          class="carousel-control-next"
          type="button"
          data-target="#carouselExampleIndicators"
          data-slide="next"
        >
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </button>
      </div>

    {{/if}}

    {{#if this.activeTagbarLayout}}
      <div style="margin: 60px">
        <div class="container-fluid margin-top-100">
          <div class="row">
            <div class="col-sm-3">
              <div class="card mb-3">

                <h4 class="card-header">
                  Categories
                </h4>
                <ul class="list-group list-group-flush">

                  {{#each topic}}
                    <li class="list-group-item">{{name}}</li>
                  {{/each}}
                </ul>
              </div>
              <div class="card">
                <h4 class="card-header">
                  Featured
                </h4>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item">An item</li>
                  <li class="list-group-item">A second item</li>
                  <li class="list-group-item">A third item</li>
                </ul>
              </div>
            </div>
            <div class="col-sm-9">
              {{{body}}}
            </div>
          </div>
        </div>
      </div>
    {{/if}}

    {{#if this.activeProfileLayout}}
      <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
          <div class="p-4 pt-5">

            <a
              href="#"
              class="img logo rounded-circle mb-5"
              style="background-image: url({{user.image}});"
            >
            </a>
            <!--                    <input type="file" name="avt" id="">-->

            <ul id="activeProfile" class="list-unstyled components mb-5">
              <li>
                <h1
                  style="color: #000 ; align-content: center;"
                >{{user.firstname}}</h1>
              </li>
              <li class="prf_btn {{active_pf}}">
                <a href="/account/home_profile">Profile public</a>
              </li>
              <li class="prf_btn {{active_pt}} ">
                <a href="/account/photo">Photo</a>
              </li>
              <li class="prf_btn {{active_sc}}">
                <a href="/account/account_security">Account Security</a>
              </li>
              <li class="prf_btn {{active_wl}}">
                <a href="/account/watch_list">Watch list</a>
              </li>
              <li class="prf_btn {{active_rc}}">
                <a href="/account/registered_courses">Registered courses</a>
              </li>
              <li class="prf_btn {{active_lg}}">
                <a href="/account/logout">Logout</a>
              </li>
            </ul>

          </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">
          <div class="content">
            {{{body}}}
          </div>
        </div>
      </div>>
    {{/if}}

