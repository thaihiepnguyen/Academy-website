{{#section 'profile-css'}}
    <link rel="stylesheet" href="/public/css/profile.css">
{{/section}}

{{#section 'profile-js'}}
    <script src="/public/js/profile.js"></script>
{{/section}}
<div style="border: 1px solid #ccc;border-radius: 5px;" class=" navbar-expand-lg navbar-light bg-light card-body">
    <div class="container-fluid d-flex justify-content-center ">
        <div class="content_profile" style="text-align: center;">
            <h1>Account Security</h1>
            <p class="description">Edit your account setting and change your password here</p>
        </div>
    </div>
</div>

<form method="post">
    <div class="content card card-body mt-60">
        <div class="mt-3 mb-3">
            <label for="txtEmail" class="form-label">Email</label>
            <input type="text" class="form-control" id="txtEmail" placeholder="{{authUser.email}}" name="email" value="{{user.email}}" readonly>
        </div>
        <div class="mb-3">
            <label for="txtOldPassword txtNewPassword txtRepeatNewPassword" class="form-label">Password</label>
            <input type="password" class="form-control mb-2" id="txtOldPassword" placeholder="Old Password " name="oldPassword" value="">
            <input type="password" class="form-control mb-2" id="txtNewPassword" placeholder="New Password " name="newPassword" value="">
            <input type="password" class="form-control mb-2" id="txtRepeatNewPassword" placeholder="Again new Password " name="repeatNewPassword" value="">
        </div>
        {{#if err_message}}
            <div class="alert alert-warning" role="alert"> {{err_message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}
        {{#if success_message}}
            <div class="alert alert-success" role="alert"> {{success_message}}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {{/if}}
        <button type="submit" class="btn btn-dark mt-3">SAVE</button>
    </div>
</form>