{{#section "detail-css"}}
  <link rel="stylesheet" href="/css/detail.css" />
{{/section}}
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
  crossorigin="anonymous"
/>
<script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
  crossorigin="anonymous"
></script>
<script src="https://twitter.github.io/typeahead.js/js/handlebars.js"></script>

<div style="padding: 1% 5%;">
  {{#if basicInfo.0.thumbnail}}
    <img src={{basicInfo.0.thumbnail}} class="imageShow" />
  {{else}}
    <div>No image to show</div>
  {{/if}}

  <div class="row">
    <div class="col" style="text-align: left; background-color: #385DBD;">
      <text
        style="padding: 2rem; color: #75E6DA; font-weight: bold; font-size: x-large;"
      >
        {{basicInfo.0.name}}

      </text>

      <br />
      <text style="padding: 2rem; color: #D4F1F4">
        Level:
        {{basicInfo.0.levelCourse}}
      </text>
    </div>
    <div class="col" style="text-align: center; background-color: #385DBD;">
      <div class="row" style="padding-top:0.5%;">
        <text style="color: #75E6DA; font-weight: bold;">
          Duration:
          {{basicInfo.0.durationCourse}}
          months
        </text>
        <br />
        <text style="color: #75E6DA; font-weight: bold;">
          Weekly study:
          {{basicInfo.0.weeklyHours}}
          hours
        </text>
      </div>
    </div>
  </div>
  {{! Short description }}
  <div class="row" style="padding-left: 2%;">
    <div class="row">
      <br />
      <div class="col">
        <br />
        <div style="display: inline-block;">
          <div>
            {{#each basicInfo.0.stars}}
              {{#if this}}
                <div class="fa fa-star" style="color: rgb(220, 220, 9)"></div>
              {{else}}
                <div class="fa fa-star"></div>
              {{/if}}
            {{/each}}
            <text style="color: #05445E; font-weight:bold">
              {{basicInfo.0.rating}}
              <text> stars </text>
            </text>
          </div>
        </div>
        <p style="white-space: pre-line;">
          <b>{{basicInfo.0.tiny_des}}</b>
        </p>
      </div>
      <div class="col" style="border-left: 1px solid black;">
        <div class="row" style="display: inline;">
          <div
            style="color: #189AB4; font-weight: bold; text-align: center;"
          >{{basicInfo.0.enrolled}}
            enrolled
          </div>
          <div style="margin-left: 35%;">
            {{#if show}}
              <form method="post" action="add/{{courseId}}">
                <button
                  type="submit"
                  class="btn btn-primary w-25"
                  style="background-color: #05445E; color: #D4F1F4; font-weight: bold;"
                >Enroll now</button>
              </form>
              {{#if basicInfo.0.discountTo}}
                <text style="font-weight: bold; font-size: large;">
                  for only:
                  <text
                    style="font-weight: bold; text-decoration: line-through;"
                  >{{basicInfo.0.price}}đ</text>
                  <text
                    style="color: #0057FF; font-weight: bold; font-size: large;"
                  >
                    {{basicInfo.0.discountTo}}đ</text></text>
              {{else}}
                <text style="font-weight: bold; font-size: large;">
                  for only:
                  <text
                    style="color: #0057FF; font-size: large;"
                  >{{basicInfo.0.price}}đ</text></text>
              {{/if}}
            {{else}}
              <button
                type="submit"
                class="btn btn-primary w-25"
                style="background-color: #5b696e; color: #D4F1F4; font-weight: bold;"
              >Enrolled</button>
              <br />
              <br />
              <form method="post" action="del/{{courseId}}">
                <button
                  type="submit"
                  class="btn btn-primary w-25"
                  style="background-color: #d10d0d; color: #D4F1F4; font-weight: bold;"
                >Unenroll</button>
              </form>
            {{/if}}
          </div>
          <br />
        </div>
      </div>
    </div>
    {{! Detail description }}
    <br />
    <div class="row">
      <div class="col">

        {{#if basicInfo.0.lecture_id}}
          <b style="font-size: 150%;">
            <div style="color: #20499A;">Lecturer:
              {{basicInfo.0.firstname}}
              {{basicInfo.0.lastname}}</div>
          </b>
        {{else}}
          <div style="color: #20499A;">Lecturer: Unknown</div>
        {{/if}}

        <div class="row" style="background-color: #D3E0F9; border-radius: 3%;">
          <text class="importanceBlue">Requirements</text>
          <p style="white-space: pre-line;">
            {{basicInfo.0.requirements}}
          </p>
          <text class="importanceBlue">Overview</text>
          <p style="white-space: pre-line;">
            {{basicInfo.0.overview}}
          </p>
          <text class="importanceBlue">What are included</text>
          <p style="white-space: pre-line;">
            {{basicInfo.0.overview}}
          </p>
        </div>

        {{! Get clips }}
      </div>
      <div class="col">
        <text class="importanceBlue">Videos</text>
        {{#each videosL}}
          <a href={{this.source}} style="text-decoration: none;">
            <div class="row">
              <div class="col">
                <img src={{this.thumbnail}} style="border-radius: 5%;" />
              </div>
              <div class="col">
                {{#if this.free}}
                  <div style="margin-top:15%; height: 100%;" class="row">
                    <div style="color: #2638D8; font-weight:bold">Free</div>
                    <b>{{this.name}} </b>
                    <button type="button" class="btn btn-danger">Edit</button>
                  </div>
                {{else}}
                  <div style="margin-top:17%; height: 100%;">
                    <b>{{this.name}} </b>
                    <button type="button" class="btn btn-danger">Edit</button>
                  </div>
                {{/if}}
              </div>
            </div>
            <br />
          </a>
        {{/each}}
      </div>
    </div>

    {{! Get 5 course }}
    <div class="row">
      {{#each courseList}}
        <div class="col">
          <div class="card" style="width: 70%">
            <img
              class="card-img-top"
              src={{this.urlImage}}
              alt="Card image cap"
            />
            <div class="card-body">
              <p
                class="card-text"
                style="text-align: center; font-weight: bold;"
              >
                {{this.nameVid}}
              </p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

    {{! Comment section }}
  </div>
  <script>
    function test(){ console.log("OK"); }
  </script>
</div>