<form method="post">
    <div class="card">
        <h4 class="card-header">
            New User
        </h4>
        <div class="card-body">
            <div class="form-group">
                <label for="txtCatName">Email</label>
                <input name="name" type="text" class="form-control" id="txtCatName" autofocus
                    placeholder="Email" />
            </div>
        </div>
        <div class="card-footer text-muted">
            <a class="btn btn-outline-success" href="/admin/categories" role="button">
                <i class="fa fa-backward" aria-hidden="true"></i>
                List
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
        </div>
    </div>
</form>